<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/right_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/left_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/right_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/left_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/right_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:minHeight="22dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/left_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/right_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/left_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/right_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_land"
                android:layout_marginStart="@dimen/left_land"
                android:gravity="center"
                android:text="@string/empty_label"
                android:textSize="@dimen/text_size_land"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonAddItem2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/add_item"
        android:onClick="launchSecondActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/location_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/edittext_loc"
        app:layout_constraintBottom_toTopOf="@id/open_location_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/open_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/button_loc"
        android:onClick="openLocation"
        android:backgroundTint="@color/teal_200"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>